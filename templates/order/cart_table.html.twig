<table class="table">
    <tr>
        <th>Товар</th>
        <th>Цена</th>
        <th>кол-во</th>
        <th>Стоимость</th>

    </tr>

    {% for item in cart.items %}


        <tr>
            <td>{{ item.product.title }}</td>
            <td>{{ item.price }}</td>
            <td><input type="number" value="{{ item.quantityOrder}}" min="1" class="form-control-static js-cart-item-quantity"
                       data-item-update-url="{{ path('order_update_item_quantity', {'id':item.id, 'quantity': '--quantity--'}) }}">
            </td>
            <td>{{ item.valueOrder }}</td>
            <td><a href="{{ path('order_delete', {'id': item.id}) }}"
                   class="btn btn-danger js-remove-from-card"
                   data-toggle="modal" data-target="#confirmationModal"
                >Удалить</a>
            </td>
        </tr>
    {% endfor %}
    <tr>
        <th colspan="3">Всего</th>
        <th>{{ cart.sumOrder}}
    </tr>
</table>